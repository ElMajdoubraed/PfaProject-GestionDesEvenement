  <% chunk.forEach((HayaM3ana)=> {%>
    <div class="row">
        <% HayaM3ana.forEach((event)=> {%>
          <div class="col-12">
            <div class="card">
              <div class="card-header">
              <h4 style="font-style: italic;"> <%= event.typeevent%></h4>
              </div>
              <div class="card-body">
                <a href="<%=  '/HayaM3ana/showadmin/'  + event.id %>" class="card-title "><h3 class="text-info"><%=event.title %></h3></a>
                <h6><b>Localisation :</b> <%= event.location.substr(0, 34)%>...</h6>
                <p class="card-text"><b>Description : </b><%= event.description.substr(0, 100)%>...</p>
                <a href="tel:<%= event.num%>"> <h4 class="text-success text-center"><%= event.num%></h4></a>
               
              </div>
            </div>
              
          </div>
          <%})%>
    </div>

  <%})%>
