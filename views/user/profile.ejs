<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="shadow-sm p-3 mb-3 bg-body rounded mt-5">
    <div class="row">
        <div class="col-4 mb-2 offset-xl-5 offset-2">

            <img class="roundedImage" src="<%= '/images/' + user.avatar%>">
        </div>
    </div>

            <% if (user) { %>
                <h4 class="mt-2 mb-4 text-center"><%= user.name%></h4>
            <%}%>
        
   <hr class="mt-5">

<div class=" mt-5">
    <div style="font-size:large;font-family:Bodoni;" class="mb-3">
        <svg id="i-location" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="28" height="28" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <circle cx="16" cy="11" r="4" />
            <path d="M24 15 C21 22 16 30 16 30 16 30 11 22 8 15 5 8 10 2 16 2 22 2 27 8 24 15 Z" />
        </svg>
      Country : <%= user.country%>
    </div>
    <div style="font-size:large;font-family:Bodoni;" class="mb-3">
        <svg id="i-mobile" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="28" height="28" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
            <path d="M21 2 L11 2 C10 2 9 3 9 4 L9 28 C9 29 10 30 11 30 L21 30 C22 30 23 29 23 28 L23 4 C23 3 22 2 21 2 Z M9 5 L23 5 M9 27 L23 27" />
        </svg>
        Phone : <%= user.phone%>
    </div>
   <div style="font-size:large;font-family:Bodoni;" class="mb-3">
    <svg id="i-mail" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="28" height="28" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
        <path d="M2 26 L30 26 30 6 2 6 Z M2 6 L16 16 30 6" />
    </svg>
    Email : <%= user.email%>
   </div>
   <div style="font-size:large;font-family:Bodoni;" class="mb-3">
    <svg id="i-user" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="28" height="28" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
        <path d="M22 11 C22 16 19 20 16 20 13 20 10 16 10 11 10 6 12 3 16 3 20 3 22 6 22 11 Z M4 30 L28 30 C28 21 22 20 16 20 10 20 4 21 4 30 Z" />
    </svg>
    Gender : <%= user.gender%>
   </div>
   <div style="font-size:large;font-family:Bodoni;" class="mb-3">
    <svg id="i-calendar" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="28" height="28" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
        <path d="M2 6 L2 30 30 30 30 6 Z M2 15 L30 15 M7 3 L7 9 M13 3 L13 9 M19 3 L19 9 M25 3 L25 9" />
    </svg>
    Birthday : <%= user.birthday.toDateString()%>
   </div>
</div>
<hr class="mt-5">
        <h2 class="text-info mb-4 mt-5">Update your profile picture</h2>
            <form action="/participants/uploadAvatar" method="POST" enctype="multipart/form-data">
                <input type="file" name="avatar"  id="avatar" onchange="readURL(this)">
<br>
                <button type="submit" class="btn btn-primary mt-3">Upload</button>
            </form>
            <hr class="mt-5">
            <h2 class="display-4"></h2>
            <img src="#" alt="" id="imagePlaceholder" height="200px" width="200px" style="display: none;">
<div class="p-3 sticky-bottom">&copy; Raed ElMajdoub. All rights reserved.</div>

        </div>
</div>



<%- include('../partials/footer') -%>