<%- include('../partials/header') -%>

             
            
   
            <main class="col-xl-6 mt-5 offset-xl-3 ">
                <%- include('../partials/flashMessages') -%> 
                <div class="shadow-sm p-3 bg-body rounded">
                <form action="/participants/signup" method="post">
                  <!--<img class="mb-4" src="" alt="" width="72" height="57">-->
                  <h2 class="h3 mb-3 fw-normal text-center">Please Sign up</h2>
                  <div class="mb-3">
                    <label for="name">User name</label>
                     <input type="text" class="form-control" id="name" name="name" placeholder="User-name" minlength="3"  required>
                   </div>
                  <div class="email mb-3">
                   <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                  </div>
                  <div class=" mb-3">
                    <label for="phone">Phone</label>
                     <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" minlength="8" required>
                   </div>
                   <div class=" mb-3">
                    <label for="country">Country</label>
                     <input type="text" class="form-control" id="country" name="country" placeholder="Country" minlength="4" required>
                   </div>
                   <div class=" mb-3">
                    <label for="birthday">Birthday</label>
                     <input type="date" class="form-control" id="birthday" name="birthday" min="1960-01-01" max="2004-12-31" required>
                   </div>
                   <div class=" mb-3">
                     <div>
                    <label for="birthday">Gender</label>
                  </div>
                    <div class="form-check radiom ">
                      <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Men">
                      <label class="form-check-label" for="inlineRadio1">Men</label>
                    </div>
                    <div class="form-check radiom  ">
                      <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
                      <label class="form-check-label" for="inlineRadio2">Female</label>
                    </div>
                   </div>
                  <div class="password mb-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" minlength="8" required>
                    
                  </div>
                  <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" minlength="8" placeholder="Confirm Password" required>
                </div>
              
                  <div class="checkbox mb-3">
                    <label>
                      <input type="checkbox" id="show" onclick="myFunction()" value="show-password"> Show Password
                    </label>
                  </div>
                  <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
                  <a class=" mt-3 w-100 btn btn-lg btn-secondary" href="/participants/login" type="submit">Login</a>
                  <p class="mt-5 mb-3 text-muted">&copy; Raed ElMajdoub. All rights reserved.</p>
                </form>
            </div>
              </main>

        

    
<%- include('../partials/footer') -%>
